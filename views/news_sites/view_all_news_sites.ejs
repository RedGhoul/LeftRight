<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%- include ../partials/csslinks.ejs %>
        <title>Left Right</title>
</head>

<body>
    <%- include ../partials/nav.ejs %>
        <style>
            .bootstrap-table.bootstrap4 {
                width: 80%;
            }
        </style>
        <div class="cotainer mt-3">
            <div class="row justify-content-center">
                <table data-toggle="table" data-search="true" data-show-columns="true" id="table">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Url</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i < data.length; i++) { %>
                            <tr>
                                <td>
                                    <h5>
                                        <%= data[i].name %>
                                    </h5>
                                </td>
                                <td>
                                    <h5>
                                        <%= data[i].url %>
                                    </h5>

                                </td>
                                <td>
                                    <a href="/NewsSites/Delete/<%= data[i].id %>" class="btn btn-primary">Delete</a>
                                    <a href="/NewsSites/Update/<%= data[i].id %>" class="btn btn-primary">Update</a>
                                </td>
                            </tr>
                            <% } %>

                    </tbody>
                </table>
            </div>
        </div>

        <%- include ../partials/jslinks.ejs %>
            <script>
                $(function () {
                    $('#table').bootstrapTable()
                })
            </script>
</body>

</html>
